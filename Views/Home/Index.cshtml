@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
 }

<div class="row">
    @foreach (var employee in Model)
    {
        var photoPath = "~/images/" + (employee.PhotoPath ?? "itachi.jpg");
        <div class="card m-sm-2" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true"/>
            <div class="card-footer text-center" style="width:auto">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.EncryptedId"
                   class="btn btn-primary m-1" style="width:auto">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.ID" 
                   class="btn btn-primary m-1" style="width:auto">Edit</a>
                <a asp-controller="home" asp-action="" 
                   class="btn btn-danger m-1" style="width:auto">Delete</a>
            </div>
        </div>
    }
</div>